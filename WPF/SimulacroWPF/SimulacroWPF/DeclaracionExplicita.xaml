<Window x:Class="SimulacroWPF.DeclaracionExplicita"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimulacroWPF"
        mc:Ignorable="d"
        Title="DeclaracionExplicita" Height="450" Width="800">
    
    
    <!--
            El texto 4 tiene incorporada una declaracion explicita que está hecha en la clase App.xaml en el 
            Application.Resources
    -->
    
    <StackPanel>
        <TextBlock Margin="20,30,60,0"> Texto 1</TextBlock>
        <TextBlock> Texto 2</TextBlock>
        <TextBlock> Texto 3</TextBlock>
        <TextBlock Style="{StaticResource EjemploDeclaracion}"> TEXTO 4</TextBlock>
    </StackPanel>
</Window>
