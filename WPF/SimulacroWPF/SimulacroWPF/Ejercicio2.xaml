<Window x:Class="SimulacroWPF.Ejercicio2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimulacroWPF"
        mc:Ignorable="d"
        Title="Ejercicio2" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="317*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <Label Content="Ejercicio 2" Foreground="Red"></Label>
            <CheckBox Content="Nombre" Name="cbNombre" IsChecked="True" Checked="cbNombre_Checked" Click="Click1"></CheckBox>
            <CheckBox Content="Apellidos" Name="cbApellido" IsChecked="True" Checked="cbApellido_Checked" Click="Click2"></CheckBox>
            <Label Content="Hugo" Name="lbNombre"></Label>
            <Label Content="Díaz" Name="lbApellido"></Label>
        </StackPanel>
    </Grid>
</Window>
